<%- include('./partials/header') %>

<% if(user.cart.length === 0){ %>
    <div class="w-full h-screen flex items-center justify-center">
        <h3 class="text-2xl text-zinc-500">Your Cart is Empty ðŸ›’</h3>
    </div>
<% } else { %>
    <div class="w-full min-h-screen flex gap-10 px-20 py-10 bg-zinc-100">
        
        <!-- Products List -->
        <div class="w-[65%] flex flex-col gap-5">
            <h2 class="text-xl font-semibold">Shopping Cart</h2>
            <% user.cart.forEach(function(product){ %>
                <div class="w-full bg-white rounded-md flex items-center gap-5 p-4 shadow-sm">
                    <!-- Image Section -->
                    <div class="w-32 h-32 flex-shrink-0 rounded-md overflow-hidden bg-[<%= product.bgcolor %>] flex items-center justify-center">
                        <img class="h-24 object-contain" src="data:image/jpeg;base64, <%= product.image.toString('base64') %>" alt="">
                    </div>
                    
                    <!-- Details Section -->
                    <div class="w-full">
                        <div class="flex justify-between items-center mb-2">
                            <h3 class="text-xl font-semibold text-[<%= product.textcolor %>]"><%= product.name %></h3>
                            <h4 class="text-lg font-semibold">â‚¹ <%= product.price %></h4>
                        </div>
                        <p class="text-sm text-zinc-500 mb-2">Discount: <span class="text-green-600">-â‚¹ <%= product.discount %></span></p>
                        <div class="flex justify-between items-center mt-3">
                            <span class="text-sm px-3 py-1 rounded-md bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">In Stock</span>
                            <!-- Remove Button (Link) -->
                            <!-- Note: User hasn't created this route yet, but good to have -->
                            <a href="/cart/remove/<%= product._id %>" class="text-red-500 font-medium text-sm hover:underline">Remove</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Bill Details -->
        <div class="w-[35%]">
            <div class="bg-white p-5 flex flex-col gap-2 rounded-md shadow-sm h-fit sticky top-20 text-center">
                <h3 class="text-xl font-semibold mb-5 border-b pb-3">Order Summary</h3>
                <div class="flex justify-between mb-3 text-zinc-600">
                    <span>Net Total</span>
                    <span>â‚¹ <%= bill - 20 %></span>
                </div>
                <div class="flex justify-between mb-3 text-zinc-600">
                    <span>Platform Fee</span>
                    <span>â‚¹ 20</span>
                </div>
                <div class="flex justify-between mb-5 font-bold text-xl border-t pt-3">
                    <span>Total Amount</span>
                    <span class="text-green-600">â‚¹ <%= bill %></span>
                </div>
                <a class="w-full bg-blue-500 text-white py-3 px-9 rounded-full font-semibold hover:bg-blue-600 transition" href="/checkout">Proceed to Checkout</a>
            </div>
        </div>

    </div>
<% } %>

<%- include('./partials/footer') %>
